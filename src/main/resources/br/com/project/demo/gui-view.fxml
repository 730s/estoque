<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.project.demo.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Container para o botão de fechar -->
    <top>
        <HBox alignment="TOP_RIGHT">
            <Button fx:id="closeButton" onAction="#handleClose" styleClass="close-button">
                <graphic>
                    <ImageView fx:id="closeImageView" fitHeight="13.0" fitWidth="13.0" />
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Novo VBox para os campos de usuário e senha -->

    <center>
        <VBox alignment="CENTER" spacing="20.0" >
            <TextField fx:id="usernameField" promptText="Usuário"  maxWidth="310.0" prefHeight="42.0" />
            <PasswordField fx:id="passwordField" promptText="Senha"  maxWidth="310.0" prefHeight="42.0"/>
        </VBox>
    </center>
</BorderPane>