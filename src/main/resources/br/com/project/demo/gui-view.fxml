<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox fx:id="root" alignment="TOP_RIGHT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.com.project.demo.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Container para o botÃ£o de fechar -->
    <HBox alignment="TOP_RIGHT">
        <Button fx:id="closeButton" onAction="#handleClose" styleClass="close-button">
            <graphic>
                <ImageView fx:id="closeImageView" fitHeight="13.0" fitWidth="13.0" />
            </graphic>
        </Button>
    </HBox>
</VBox>